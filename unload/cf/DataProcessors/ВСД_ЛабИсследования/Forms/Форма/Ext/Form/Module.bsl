Функция ОтправитьВСД_НаСервере( )
	
	сзДокументыКОтправке = ПодготовитьСписокВСДКОтправке( );	

	//ПараметрыОрганизации = ВСД.ЗагрузитьПараметры( Объект.Организация );									
